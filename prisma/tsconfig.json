{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolvePackageJsonExports": true
  },
  "include": [
    "seed.ts",
    "../mock_db/**/*.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}